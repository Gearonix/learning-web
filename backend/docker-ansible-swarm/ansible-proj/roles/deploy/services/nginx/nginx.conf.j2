worker_processes 2;

events { worker_connections 1024; }
error_log /etc/nginx/logs/error.log

http {
    server {
        listen 80;
        server_name image.local;
        access_log /etc/nginx/logs/access.log

        location ~ (/uploads/|/upload) {
            proxy_pass http://api:3000;
        }

        location ~ (/) {
            proxy_pass http://app;
        }
    }
}